@model IEnumerable<Job_Offers_Website.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h3>Bienvenue ! </h3>
    <p>Vous êtes à la recherche d'un emploie? vous êtes dans le bon endroit</p>
    <!--<p><a href="https://asp.net" class="btn btn-primary btn-lg">Plus de détails &raquo;</a></p>-->
</div>


@foreach (var item in Model)
{
<div class="panel panel-default" style="padding:15px;">
    <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
    <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>

    <div class="row">

        @foreach (var subItem in item.Jobs)
        {
            <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; height:380px;">
                <img id="zoom" src="~/Uploads/@subItem.JobImage" />
                <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                <h5>@Html.DisplayFor(modelItem => subItem.JobContent)</h5>
                <button class="btn btn-default">Détails</button>
            </div>

        }
    </div>
</div>

}


